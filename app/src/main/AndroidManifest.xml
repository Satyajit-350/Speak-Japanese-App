<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.satyajit.Speak_Japanese">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.satyajit.Speak_Japanese.ColorsActivity"
            android:label="@string/category_colors"
            android:parentActivityName="com.satyajit.Speak_Japanese.MainActivity"/>
        <activity
            android:name="com.satyajit.Speak_Japanese.PhrasesActivity"
            android:label="@string/category_phrases"
            android:parentActivityName="com.satyajit.Speak_Japanese.MainActivity"/>
        <activity
            android:name="com.satyajit.Speak_Japanese.FamilyActivity"
            android:label="@string/category_family"
            android:parentActivityName="com.satyajit.Speak_Japanese.MainActivity"/>
        <activity
            android:name="com.satyajit.Speak_Japanese.NumbersActivity"
            android:label="@string/category_numbers"
            android:parentActivityName="com.satyajit.Speak_Japanese.MainActivity"/>
        <activity android:name="com.satyajit.Speak_Japanese.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>